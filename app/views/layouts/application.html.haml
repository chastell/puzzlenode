!!! 5
%html
  %head
    %title PuzzleNode
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    %div{style: 'text-align: right; font-size: 12px'}
      - if signed_in?
        = current_user.name
        |
        = link_to 'Log out', logout_path
      - else
        = link_to 'Sign up / Log in', login_path
    - flash.each do |type, message|
      %p
        = message
    = yield
